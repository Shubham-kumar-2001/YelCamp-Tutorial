<% layout("layout/boilerplate") %>
    <h1 class="text-center text-dark">Showing data regarding home</h1>
    <div class="text-center mb-3 ">
        <a href="/campgrounds/new" class="btn btn-success">Click here to add New Data</a>
    </div>
    <ul>
        <% for(let cam of campground){ %> 
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                            <img src="<%=cam.images[0].url%>" alt="photo" class="img-fluid">    
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= cam.title %> </h5>
                            <p class="card-text"><%=cam.description %> </p>
                            <p class="card-text">
                                <small class="text-muted">cam.location</small>
                            </p>
                            <a href="/campgrounds/<%= cam._id%>" class="btn btn-warning"><%=cam.title %> </a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %> 
    </ul>
    


</ul>


